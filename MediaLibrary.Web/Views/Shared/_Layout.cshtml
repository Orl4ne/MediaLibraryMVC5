    <main class="h-100 container body-content">
        @RenderBody()
    </main>

    <footer class="container bg-primary text-light fixed-bottom">
        &copy; @DateTime.Now.Year - Orl4ne ASP.NET Application
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
